<?xml version="1.0"?>
<config>
    <tabs>
        <bfconf translate="label">
            <label>Browser and Operating System Finder</label>
            <sort_order>101</sort_order>
        </bfconf>
    </tabs>
    <sections>
        <bf_menu translate="label" module="adminhtml">
            <label>Settings</label>
            <tab>bfconf</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <bf_general translate="label comment">
                    <label>General</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>
                    	<![CDATA[
                    		This module is used to add browser name and OS name in body tag class attribute<br>
                    		For e.g:<br>
							&lt;body class=".... <strong>browser-firefox os-windows</strong>"&gt;<br>
							&lt;body class=".... <strong>browser-chrome os-apple</strong>"&gt;<br>
							&lt;body class=".... <strong>browser-safari os-iphone</strong>"&gt;<br>
							&lt;body class=".... <strong>browser-chrome os-android</strong>"&gt;<br><br>
							<strong>Use: To apply browser and OS specific CSS</strong><br><br> 
                   		]]>
                 	</comment>
                    <fields>
                        <bf_browser_name translate="label comment">
                            <label>Browser Name Prefix</label>
                            <comment>For e.g. <![CDATA[<strong>browser</strong>]]>-firefox</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bf_browser_name>
                        <bf_os_name translate="label comment">
                            <label>OS Name Prefix</label>
                            <comment>For e.g. <![CDATA[<strong>os</strong>]]>-windows</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bf_os_name>
                        <bf_admin_also translate="label comment">
                            <label>Apply to Admin Body Class</label>
                            <comment> If yes, then classes will be added to admin body tag also</comment>
                            <frontend_type>radios</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bf_admin_also>
                    </fields>
                </bf_general>
            </groups>
        </bf_menu>
    </sections>
</config>